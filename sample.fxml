<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<VBox fx:controller="sample.Controller" xmlns:fx="http://javafx.com/fxml" alignment="TOP_CENTER">
    <TextArea fx:id="mainArea" VBox.vgrow="ALWAYS" editable="false">
    <font>
        <Font name="Times" size="18.0" />
    </font>
    </TextArea>
    <HBox alignment="BOTTOM_CENTER">
        <TextField fx:id="msgField" HBox.hgrow="ALWAYS" onAction="#sendMsgAction" promptText="Введите текст">
        <font>
            <Font name="Times" size="18.0" />
        </font>
        </TextField>
    <Button prefWidth="75" maxHeight="Infinity" HBox.hgrow="ALWAYS" text="Send" onAction="#sendMsgAction"/>
    </HBox>
</VBox>
